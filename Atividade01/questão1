nota1= float(input("Digite uma nota: "))
nota2= float(input("Digite uma nota: "))
nota3= float(input("Digite uma nota: "))

media = (nota1 + nota2 + nota3) / 3

print(f"A média é: {media}")


media_ponderada1 = (nota1*2 + nota2*2 + nota3*3) / (2 + 2 + 3)

print(f"A média ponderada 1 é: {media_ponderada1}")


media_ponderada2 = (nota1*1 + nota2*2 + nota3*2) / (1 + 2 + 2)

print(f"A média ponderada 2 é: {media_ponderada2}")
